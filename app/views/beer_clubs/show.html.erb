<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<% if current_user and @new_membership %>
  <%= form_with(model: @new_membership) do |form| %>
    <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Join the beer club" %>
  <% end %>
<% end %>

<% if current_user and @old_membership %>
  <%= button_to "end the membership", @old_membership, method: :delete %>
<% end %>

<% if current_user %>
<div>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club) %> |
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to "Destroy this beer club", @beer_club, method: :delete %>
</div>
<% end %>
