<div>
<div>
  <h2>Send a message: </h2>
  <%= form_with model: @message do |f| %>
    <div>to: <%= f.select :receiver_id, options_from_collection_for_select(@users, :id, :to_s) %></div>
    <div>title:<%= f.text_field :title %></div>
    <div><%= f.text_area :message_field, size: "100x30" %></div>
    <div><%= f.submit 'Send'%></div>
  <% end %>
</div>

<div>
  <h2>Your messages: </h2>
</div>
<div id="messages">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>From</th>
        <th>Title</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |m| %>
        <tr>
          <td><%= m.sender.username %>  </td>
          <td><%= link_to m.title, m %>  </td>
          <td><%= m.message_field %>  </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
