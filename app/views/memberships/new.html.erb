<h1><%=current_user.username %>, Join a club!</h1>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited membership from being saved:</h2>
    </div>
    <ul>
      <% @membership.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs.select do |c| not current_user.beer_clubs.include? c end, :id, :to_s) %>

